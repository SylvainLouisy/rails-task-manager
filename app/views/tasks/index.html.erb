<div class="container text-center">
  <h1>My tasks</h1>

  <ul>
  <% @tasks.each do |task| %>
  <h3><li class="list-unstyled"><input type="checkbox" <%= task.completed ? "checked" : "" %>>
  <%=link_to task.title, task_path(task.id), :class => "text-decoration-none" %>
  <%= link_to "🗑️", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "text-decoration-none" %></li></h3>
  <% end %>
  </ul>
  <%=link_to '➕ Create new task', new_path, :class => "text-decoration-none" %>
</div>
