<div class="container mt-5">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
  <%= link_to "🗑️", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "text-decoration-none" %>
  <div class="mt-5"><%= link_to 'Back to Tasks list', tasks_path, :class => "text-decoration-none"  %></div>
</div>
